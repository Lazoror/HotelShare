@model HotelShare.Web.ViewModels.Hotel.HotelViewModel

@{
    decimal.TryParse(Model.Rating.ToString(), out decimal decimalStar);

    var starFilled = Int32.Parse(Math.Round(decimalStar).ToString());

}

<div class="hotel-stars">
    @for (int i = 0; i < starFilled; i++)
    {
        int count = i + 1;

        <div id="hotel-star" class="hotel-star" value="@count" hotelId="@Model.Id" style="background-image: url(../images/Star.svg)"></div>
    }

    @if (starFilled != 5)
    {
        @for (int i = starFilled + 1; i <= 5; i++)
        {
            <div id="hotel-star" class="hotel-star" value="@i" hotelId="@Model.Id"></div>
        }
    }


</div>