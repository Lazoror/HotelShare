@model HotelShare.Web.ViewModels.Room.RoomViewModel
@{ ViewData["Title"] = "RoomDetails"; }

<h2>@Resources.Room</h2>

<div>
    <h4>@Resources.Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Resources.CompanyName
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CompanyName)
        </dd>
        <dt>
            @Resources.Description
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt>
            @Resources.HomePage
        </dt>
        <dd>
            @Html.DisplayFor(model => model.HomePage)
        </dd>
    </dl>
</div>

@if (User.IsInRole("Manager"))
{
    <div class="link-container">
        @Html.ActionLink(Resources.Delete, "Delete", "Room", new { companyName = Model.CompanyName }, new {@class="btn btn-outline-primary" })
        @Html.ActionLink(Resources.Edit, "Edit", "Room", new { companyName = Model.CompanyName }, new { @class="btn btn-outline-primary" })
    </div>
}

<div>
    <a asp-action="Index">@Resources.BackToList</a>
</div>

