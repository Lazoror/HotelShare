@model HotelShare.Web.ViewModels.Room.RoomViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>@Resources.Edit</h1>

<h4>@Resources.Room</h4>
<hr />
<div class="row">
    <div class="col-md-4 edit-room-wrapper">
        <form asp-action="Edit">
            <div class="form-group">
                <label>@Resources.CompanyName</label>
                <input asp-for="CompanyName" class="form-control" />
                <span asp-validation-for="CompanyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>@Resources.Description</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>@Resources.HomePage</label>
                <input asp-for="HomePage" class="form-control" />
                <span asp-validation-for="HomePage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" name="@nameof(Model.OldCompanyName)" value="@Model.OldCompanyName" />
                <input type="submit" value="@Resources.Change" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Resources.BackToList</a>
</div>

